{
  "manifest_version": 3,
  "name": "Vercel Project Deletion Helper",
  "version": "1.0.0",
  "description": "Auto-fills confirmation fields for Vercel project deletion",
  "author": "Remco Stoeten",
  "homepage_url": "https://github.com/remcostoeten/easy-delete-vercelprojects-chrome-extension",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "contextMenus"],
  "host_permissions": ["https://vercel.com/*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://vercel.com/*/*/settings"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
